<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_viewholder_city"
        android:layout_width="match_parent"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/project_margin_default_16dp"
        android:layout_height="75dp">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:background="@color/cyan">
            <LinearLayout
                android:layout_margin="@dimen/project_margin_default_16dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textview_viewholder_city_title_country"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textview_viewholder_city_temp_weather"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/project_margin_default_16dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_width="0dp">
                <ImageView
                    android:id="@+id/imageview_viewholder_city_icon"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon01d">
                </ImageView>

                <ImageView
                    android:id="@+id/imageview_viewholder_city_delete"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/ic_delete_city_foreground" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>