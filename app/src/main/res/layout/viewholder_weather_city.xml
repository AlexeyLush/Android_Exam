<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="118dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_viewholder_city"
        android:layout_width="75dp"
        android:elevation="10dp"
        android:backgroundTint="#2394C8"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/project_margin_default_16dp"
        android:layout_height="105dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewholder_weather_city_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                app:layout_constraintTop_toTopOf="@id/viewholder_weather_city_constraintLayout"
                android:id="@+id/imageView_viewholder_weather_city_icon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/icon01d"/>

            <TextView
                android:layout_margin="6dp"
                android:id="@+id/textView_viewholder_weather_city_temp_day"
                app:layout_constraintTop_toBottomOf="@id/imageView_viewholder_weather_city_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Day: 12^C"
                />
            <TextView
                android:textSize="12sp"
                android:layout_margin="6dp"
                android:id="@+id/textView_viewholder_weather_city_temp_night"
                app:layout_constraintTop_toBottomOf="@id/textView_viewholder_weather_city_temp_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Night: 12^C"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>